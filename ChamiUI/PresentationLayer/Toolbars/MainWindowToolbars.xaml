<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:commands="cls-namespace:ChamiUI.PresentationLayer.Commands"
>
    <ToolBar x:Key="FileToolbar" Band="0" BandIndex="0" Visibility="Visible">
        
        <Button Command="New">Nuovo</Button>
        <Button>Importa</Button>
    </ToolBar>
    <ToolBar x:Key="EditToolbar" Band="0" BandIndex="0" Visibility="Visible">
        
        <Button Command="{Binding CustomCommand}">Modifica</Button>
    </ToolBar>
</ResourceDictionary>