<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:tb="http://www.hardcodet.net/taskbar"
                    xmlns:vm="clr-namespace:ChamiUI.Taskbar"
                    >
    
    <ContextMenu x:Shared="False" x:Key="ChamiSystemTrayMenu">
        <MenuItem Header="Show Chami" Command="{Binding ShowWindowCommand}"></MenuItem>
        <MenuItem Header="Hide Chami" Command="{Binding HideWindowCommand}"></MenuItem>
        <Separator/>
        <MenuItem Header="Exit" Command="{Binding ExitApplicationCommand}"></MenuItem>
    </ContextMenu>
    <tb:TaskbarIcon x:Key="ChamiTaskbarIcon" 
                    IconSource="../Assets/chameleon16x16.ico" 
                    ToolTipText="{Binding TooltipText}"
                    ContextMenu="{StaticResource ChamiSystemTrayMenu}"
                    DoubleClickCommand="{Binding ShowWindowCommand}"
                    >
        <tb:TaskbarIcon.DataContext>
            <vm:TaskbarBehaviourViewModel></vm:TaskbarBehaviourViewModel>
        </tb:TaskbarIcon.DataContext>
    </tb:TaskbarIcon>
</ResourceDictionary>