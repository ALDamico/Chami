<UserControl x:Class="ChamiUI.Controls.IconButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ChamiUI.Controls"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300" 
             IsEnabledChanged="IconButton_OnIsEnabledChanged"
>
    <UserControl.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"></Style>
    </UserControl.Resources>
    <Button x:Name="ButtonElement">
        <Button.Content>
            <DockPanel>
                <iconPacks:PackIconFontAwesome x:Name="IconElement" HorizontalAlignment="Center"></iconPacks:PackIconFontAwesome>
                <TextBlock Margin="2" x:Name="TextBlockElement" TextAlignment="Center" TextWrapping="WrapWithOverflow"></TextBlock>
            </DockPanel>
        </Button.Content>
    </Button>
</UserControl>
