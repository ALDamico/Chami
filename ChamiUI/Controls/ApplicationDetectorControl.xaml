<UserControl
    x:Class="ChamiUI.Controls.ApplicationDetectorControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:ChamiUI.PresentationLayer.ViewModels"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:converters="clr-namespace:ChamiUI.PresentationLayer.Converters"
    d:DataContext="{d:DesignInstance vm:WatchedApplicationControlViewModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="300"
    d:DesignWidth="300"
    Background="White"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="ErrorStyle" TargetType="{x:Type DataGridRow}">
            <Setter Property="Padding" Value="-2" />
            <Setter Property="Background" Value="White"></Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding MarkedForDeletion}"
                             Value="True">
                    <Setter Property="Background" Value="OrangeRed">

                    </Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <converters:StringToUriConverter x:Key="StringToUriConverter"></converters:StringToUriConverter>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <GroupBox
            Grid.Row="0"
            Grid.Column="0"
            x:Name="DetectAppplicationsGroupbox"
            Header="{lex:Loc}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" MinHeight="200" />
                </Grid.RowDefinitions>
                <StackPanel
                    Grid.Row="0"
                    Grid.Column="0"
                    Orientation="Horizontal">
                    <CheckBox HorizontalAlignment="Center" IsChecked="{Binding IsDetectionEnabled}">
                        <Label
                            Margin="0,-5,0,0"
                            HorizontalContentAlignment="Center"
                            x:Name="DetectApplicationsCheckboxLabel"
                            Content="{lex:Loc}" />
                    </CheckBox>

                </StackPanel>
                <DataGrid Grid.Row="2"
                          Grid.Column="0"
                          ItemsSource="{Binding WatchedApplications}"
                          IsEnabled="{Binding ControlsEnabled}"
                          AutoGenerateColumns="False"
                          x:Name="WatchedApplicationsDataGrid"
                          PreviewKeyDown="WatchedApplicationsDataGrid_PreviewKeyDown"
                          RowStyle="{StaticResource ErrorStyle}">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn x:Name="ApplicationIconColumn"
                                                Header="{lex:Loc Key=ApplicationIconColumn}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Image Source="{Binding Icon}"
                                           MaxHeight="16"
                                           MaxWidth="16">
                                    </Image>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <DockPanel>
                                        <Button DockPanel.Dock="Right" ToolTip="{lex:Loc}" Content="..." MaxHeight="16" MaxWidth="16" x:Name="ChangeIconButton"></Button>
                                        <Button DockPanel.Dock="Right"></Button>
                                        <Image Source="{Binding Icon}"
                                               MaxHeight="16"
                                               MaxWidth="16">
                                        </Image>
                                        
                                    </DockPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn x:Name="ProcessNameColumn"
                                                Header="{lex:Loc Key=ProcessNameColumn}" 
                                                Binding="{Binding Name}">
                        </DataGridTextColumn>
                        <DataGridHyperlinkColumn Header="{lex:Loc Key=PathColumn}"
                                                 ContentBinding="{Binding Path}"
                                                 Binding="{Binding Path, Converter={StaticResource StringToUriConverter}}">
                            <DataGridHyperlinkColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsPathColumnToolTipVisible}">
                                            <Setter Property="ToolTip" Value="{lex:Loc Key=PathColumn_ToolTip}"></Setter>
                                        </DataTrigger>
                                    </Style.Triggers>


                                    <EventSetter Event="Hyperlink.Click" x:Name="HyperLinkClick"
                                                 Handler="HyperLinkClickHandler">
                                    </EventSetter>
                                </Style>
                            </DataGridHyperlinkColumn.ElementStyle>
                        </DataGridHyperlinkColumn>
                        <DataGridCheckBoxColumn x:Name="IsWatchEnabledColumn"
                                                Header="{lex:Loc Key=IsWatchEnabledColumn}"
                                                Binding="{Binding IsWatchEnabled}">
                        </DataGridCheckBoxColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>