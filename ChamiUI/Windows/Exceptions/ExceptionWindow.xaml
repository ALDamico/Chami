<Window x:Class="ChamiUI.Windows.Exceptions.ExceptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ChamiUI.Windows.Exceptions"
        xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
        xmlns:lex="http://wpflocalizeextension.codeplex.com"
        mc:Ignorable="d"
        Title="ExceptionWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical" Margin="10">
        <DockPanel>
            <svgc:SvgViewbox Margin="10" DockPanel.Dock="Left" Source="/ChamiUI;component/Assets/Svg/circle-exclamation-solid.svg" MaxHeight="96" MaxWidth="96"></svgc:SvgViewbox>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="AnExceptionOccurredMessage" TextWrapping="Wrap" Text="{lex:Loc}"></TextBlock>    
            </ScrollViewer>
            
        </DockPanel>
        
    </StackPanel>
</Window>
